@model ListCatsBreedsModel 

<h1>Breeds</h1>

<form asp-controller="Cat" asp-action="GetCatByBreed" method="post">
    <div class="form-group">
        <label for="breedId">Select a breed:</label>
        <select asp-items="@Model.LstBreeds" class="form-select" name="breedId">
           <option value="Name">select option</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary" >Submit</button>
</form>

@if (Model.SelectedBreed != null) {
    @foreach (var cat in Model.SelectedBreed)
    {
        <img style="height:200px"src="@cat.Url"/>

        foreach (var breed in cat.Breeds)
        {
            <p>@breed.Description</p>
            <h1>@breed.Name</h1>
            <p>@breed.Lap</p>
            <p>@breed.Alt_names</p>
        }
    }

}

 <p><a asp-controller="Cat" asp-action="Breeds">Add new Favorite Cat</a></p>
